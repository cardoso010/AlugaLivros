@model AlugaLivros.Models.Livro

@{
    ViewData["Title"] = "Details";
}

<h2>Detalhes</h2>

<div>
    <h4>Livro</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Quantidade)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Quantidade)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Foto)
        </dt>
        <dd>
            <img src="~/@Model.Foto" alt="Imagem @Model.Titulo" />
        </dd>
        <dl class="dl-horizontal">
            <dt>
                Autores
            </dt>
            <dd>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Nome
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.LivroAutor)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Autor.Nome)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </dd>
        </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.LivroID">Editar</a> |
    <a asp-action="Index">Voltar</a>
</div>
